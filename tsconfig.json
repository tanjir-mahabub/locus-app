{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "types": [
            "node",
            "jest",
            "supertest"
        ],
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "node_modules/@types"
    ]
}